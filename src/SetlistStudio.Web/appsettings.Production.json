{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/setliststudio.db"
  },
  
  "KeyVault": {
    "VaultName": ""
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning", 
      "Microsoft.EntityFrameworkCore": "Error",
      "SetlistStudio": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "AllowedHosts": "setliststudio.com;www.setliststudio.com;*.setliststudio.com",
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://0.0.0.0:5001",
        "Certificate": {
          "Path": "/app/certs/certificate.pfx",
          "Password": ""
        }
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 1000,
      "MaxRequestBodySize": 10485760,
      "RequestHeadersTimeout": "00:00:30"
    }
  },
  "ForwardedHeaders": {
    "ForwardedHeaders": "XForwardedFor,XForwardedProto,XForwardedHost",
    "KnownProxies": []
  },
  "DataProtection": {
    "ApplicationName": "SetlistStudio",
    "PersistKeysToFileSystem": "/app/data/keys"
  },
  "Security": {
    "CspReporting": {
      "Enabled": true
    }
  }
}