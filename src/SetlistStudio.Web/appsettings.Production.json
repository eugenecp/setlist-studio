{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/setliststudio.db",
    "WriteConnection": "Host=YOUR_POSTGRES_HOST;Port=5432;Database=setliststudio_prod;Username=setliststudio_prod;Password=YOUR_POSTGRES_PASSWORD;SSL Mode=Require;Trust Server Certificate=false;",
    "ReadConnection": "Host=YOUR_READ_REPLICA_HOST;Port=5432;Database=setliststudio_prod;Username=setliststudio_readonly;Password=YOUR_READONLY_PASSWORD;SSL Mode=Require;Trust Server Certificate=false;"
  },
  "Database": {
    "Provider": "PostgreSQL",
    "Pool": {
      "MaxSize": 200,
      "MinSize": 10,
      "ConnectionTimeout": 30,
      "CommandTimeout": 300,
      "Enabled": true
    },
    "ReadReplicas": [
      "Host=YOUR_READ_REPLICA_1;Port=5432;Database=setliststudio_prod;Username=setliststudio_readonly;Password=YOUR_READONLY_PASSWORD;SSL Mode=Require;Trust Server Certificate=false;",
      "Host=YOUR_READ_REPLICA_2;Port=5432;Database=setliststudio_prod;Username=setliststudio_readonly;Password=YOUR_READONLY_PASSWORD;SSL Mode=Require;Trust Server Certificate=false;"
    ],
    "PostgreSQL": {
      "Host": "YOUR_POSTGRES_HOST",
      "Port": "5432",
      "Database": "setliststudio_prod",
      "Username": "setliststudio_prod",
      "Password": "YOUR_POSTGRES_PASSWORD"
    }
  },
  
  "KeyVault": {
    "VaultName": ""
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning", 
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Npgsql": "Information",
      "SetlistStudio": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "AllowedHosts": "setliststudio.com;www.setliststudio.com;*.setliststudio.com",
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://0.0.0.0:5001",
        "Certificate": {
          "Path": "/app/certs/certificate.pfx",
          "Password": ""
        }
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 1000,
      "MaxRequestBodySize": 10485760,
      "RequestHeadersTimeout": "00:00:30"
    }
  },
  "ForwardedHeaders": {
    "ForwardedHeaders": "XForwardedFor,XForwardedProto,XForwardedHost",
    "KnownProxies": []
  },
  "DataProtection": {
    "ApplicationName": "SetlistStudio",
    "PersistKeysToFileSystem": "/app/data/keys"
  },
  "Security": {
    "CspReporting": {
      "Enabled": true
    }
  }
}