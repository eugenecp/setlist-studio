{
  "name": "Setlist Studio",
  "short_name": "Setlist Studio", 
  "description": "Music performance management application for organizing songs and creating setlists with offline performance support",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "any",
  "background_color": "#1976d2",
  "theme_color": "#1976d2",
  "scope": "/",
  "lang": "en",
  "categories": ["music", "productivity", "entertainment"],
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon-512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "icon-512.png",
      "sizes": "512x512", 
      "type": "image/png",
      "form_factor": "wide",
      "label": "Setlist Studio main interface for managing music performances"
    }
  ],
  "shortcuts": [
    {
      "name": "Performance Mode",
      "short_name": "üé§ Perform",
      "description": "Quick access for live performance (offline-ready)",
      "url": "/setlists?mode=performance",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "My Setlists",
      "short_name": "üìù Setlists",
      "description": "Quick access to your performance setlists",
      "url": "/setlists",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Song Library",
      "short_name": "‚ô™ Songs", 
      "description": "Browse and manage your song collection",
      "url": "/songs",
      "icons": [
        {
          "src": "icon-192.png", 
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Add Song",
      "short_name": "‚ûï Add",
      "description": "Quickly add a new song to your library",
      "url": "/songs/add",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192" 
        }
      ]
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+setlist",
      "url": "/import?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/plain": [".txt", ".setlist"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/import/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "setlistFile",
          "accept": ["text/plain", "application/json"]
        }
      ]
    }
  }
}